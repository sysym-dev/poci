extends ../layouts/app.pug

include ../mixins/error-alert.pug
include ../mixins/title.pug
include ../mixins/input.pug
include ../mixins/button.pug

block app-content
    +error-alert
    form(action="/collections/new" method="post") 
        +title('New Collection', { size: 'lg' })(class="mb-2")
        +input('Name', { input: { name: 'name', type: 'text', required: true, autofocus: true } })
        div(class="flex gap-x-1")
            +button('Save', { color: 'sky' })
            +button('Back', { color: 'gray', link: { href: '/' } })
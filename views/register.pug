extends layouts/app.pug

include mixins/title.pug
include mixins/input.pug
include mixins/button.pug
include mixins/error-alert.pug
include mixins/link.pug

block app-content
    +error-alert
    form(action='/register', method='post' class='mb-2')
        +title('Create your new account', { size: 'lg' })(class='mb-2')
        +input('Email', { input: { name: 'email', type: 'email', required: true, autofocus: true } })
        +input('Password', { input: { name: 'password', type: 'password', required: true } })
        +input('Password Confirmation', { input: { name: 'password_confirmation', type: 'password', required: true } })
        +button('Register')

    p Already have account? 
        +link('Login Here', { color: 'sky', href: '/login' })